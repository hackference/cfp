extends ../layout

block content
  .row
    .col-md-9
      h1.text-left #{talk.talk.title}
      p.marked #{talk.talk.abstract}
    .col-md-3
      a.btn.btn-default(href='/talk/#{talk._id}/vote')
        if !vote
          i.fa.fa-plus-square-o
        else
          i.fa.fa-minus-square-o
        |  Vote
  .row
    .col-md-12
      h2.text-left User Details
  .row
    .col-md-10
      p Experience: #{talk.user.experience}
